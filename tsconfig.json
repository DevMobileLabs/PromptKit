{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@assets/*": ["assets/*"]
    }
  },
  "include": [
    "./**/*.ts",
    "commitlint.config.ts",
    "eslint.config.mjs",
    "branchlint.config.ts",
    "assets/**/*.ts",
    "assets/**/*.tsx"
  ]
}
